<Window x:Class="VLiMeH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VLiMeH"
        mc:Ignorable="d"
        Title="VLiMeH" Height="650" Width="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="464*"/>
            <ColumnDefinition Width="279*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="297*"/>
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Center" FontSize="16">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="View"/>
            <MenuItem Header="Project"/>
            <MenuItem Header="MasterTools"/>
            <MenuItem Header="Tools"/>
            <MenuItem Header="Windows"/>
            <MenuItem Header="Help"/>
        </Menu>
        <Menu VerticalAlignment="Center" FontSize="16" Grid.Column="2">
            <MenuItem Header="DopButton" Background="Yellow"/>
            <MenuItem Header="DopButton22" Background="Yellow"/>
        </Menu>
    </Grid>
</Window>
